@page
@model VolunTree_API.Pages.VoluntariosModel
@section Styles{
    <link href="~/css/ong.css" rel="stylesheet"/>
}
<!--============INICIO DO <MAIN>============-->
<!--div BACKGROUD QG02-->
<main class="mt-3 container">
    <div class="row justify-content-between">
        <div class="col-3">
            <h1 id="Ongs-title" class="h1">Voluntários</h1>
        </div>
        <div class="col-3">
            <button class="btn btn-success px-4">
                <a href="@Url.Page("CadastroVoluntario")" class="text-white">Cadastre-se</a>
            </button>
        </div>
    </div>
     <div class="border rounded" id="menu-box">
            @if (Model.Voluntarios != null && Model.Voluntarios.Count > 0)
            {
                foreach (var voluntario in Model.Voluntarios)
                {
                    <div class="ong-card mx-2 border-top border-bottom">
                        <div class="row">
                            <h3 class="col">@voluntario.NomeVolun</h3>
                            <p class="col">Email: @voluntario.EmailVolun</p>
                        </div>
                        <p class='text-secondary'>Missão: @voluntario.Habilidades</p>
                        <p class='text-secondary'>Necessidades: @voluntario.Interesses</p>
                    </div>
                }
            }
            else
            {
                <p class="text-secondary">Nenhuma ONG encontrada.</p>
            }
        </div>
<!-- Inicio MODAL Autentificação-->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <!--Centro-->
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Autentificação</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">


                <!--Mudar card com react -- QG04 -->
                <div class="btn-group mx-auto " style="width:100%" role="group" aria-label="Basic radio toggle button group">
                    <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked>
                    <label class="btn btn-outline-success" for="btnradio1">Entrar</label>
                    <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
                    <label class="btn btn-outline-success" for="btnradio2">Cadastrar</label>
                </div>
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success">Authenticate</button>
            </div>
        </div>
    </div>
</div><!--Fim MODAL-->
