@page
@model VolunTree_API.Pages.OngsModel

@section Styles {
    <link rel="stylesheet" href="~/css/ong.css" />
}

<main class="mt-3">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-3">
                <h1 id="Ongs-title" class="h1">ONGs</h1>
            </div>
            <div class="col-3">
                <button class="btn btn-success px-4">
                    <a href="@Url.Page("CadastroOng")" class="text-white">Cadastre sua ONG</a>
                </button>
            </div>
        </div>

        <div class="border rounded" id="menu-box">
            @if (Model.Ongs != null && Model.Ongs.Count > 0)
            {
                foreach (var ong in Model.Ongs)
                {
                    <div class="ong-card mx-2 border-top border-bottom">
                        <div class="row">
                            <h3 class="col">@ong.NomeOng</h3>
                            <p class="col">Email: @ong.EmailOng</p>
                        </div>
                        <p class='text-secondary'>Missão: @ong.Missao</p>
                        <p class='text-secondary'>Necessidades: @ong.Necessidades</p>
                    </div>
                }
            }
            else
            {
                <p class="text-secondary">Nenhuma ONG encontrada.</p>
            }
        </div>

