@{
    var popperUrl = "https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/main.css" rel="stylesheet" />
    <!--fonte Commissioner-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Commissioner:wght@100..900&display=swap" rel="stylesheet">
    <!--fonte Encode Sans-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Commissioner:wght@100..900&family=Encode+Sans+Expanded:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    @RenderSection("Styles", required: false)
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        main {
            flex: 1;
        }
        h1{
            font-family: "Encode Sans Expanded", sans-serif;
            font-weight: 700;
            font-style: normal;
        }
        h2{
            font-family: "Encode Sans Expanded", sans-serif;
            font-weight: 500;
            font-style: normal;
        }

        h3{
            font-family: "Encode Sans Expanded", sans-serif;
            font-weight: 400;
            font-style: normal;
        }
        p {
            font-family: "Commissioner", sans-serif;
            font-optical-sizing: auto;
            font-weight: 400;
            font-style: normal;
        }
        div {
            font-family: "Commissioner", sans-serif;
            font-optical-sizing: auto;
            font-weight: 400;
            font-style: normal;
        }
        #logo{
            width: 48px;
            height: 48px;
            margin: 20px;
        }
        #background-home {
            background-image: url('ongs.jpeg');
            height: 1200px;
        }

        #h2-cor {
            color: white;
            text-align: center;
        }

        #h3-cor{
            text-align: center;
            color: lightgreen;
        }

        #input-height {
            height: 70%;
        }
        #btn-entrar{
            width: 100%;
            display: block;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md bg-success bg-gradient">
        <div class="container-fluid">
            <img src=".\logo256.png" alt="voluntree logo" id="logo"/>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link active text-light mx-3" aria-current="page" href="@Url.Page("Index")">Home</a>
                    <a class="nav-link text-light mx-3" href="@Url.Page("Voluntarios")">Voluntariado</a>
                    <a class="nav-link text-light mx-3" href="@Url.Page("Ongs")">ONGs</a>
                    <a class="nav-link text-light mx-3" href="@Url.Page("Sobre")">Sobre o Voluntree</a>
                </div>
            </div>
            <div class="d-flex">
                <form class="d-flex m-auto" role="search">
                    <input class="form-control me-2 w-auto" id="input-height" type="search" placeholder="Pesquisar ONGs" aria-label="Search">
                </form>
                <a href="@Url.Page("Login")"><button type="button" class="btn btn-light m-2" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Entrar</button></a>
            </div>
        </div>
    </nav>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="container-fluid bg-body-tertiary">
        <div class="row justify-content-center my-4 text-secondary text-center">
            <h3>Equipe de Desenvolvimento</h3>
            <div class="d-flex justify-content-center">
                <p class="col-2">
                    Caio Pequeno    <br />
                    Fabio Henrique  <br />
                    Hudson Henrique <br />
                    Kayky Alves     <br />
                    Paulo Bispo
                </p>
                <p class="col-1">
                    Back-End <br />
                    Back-End <br />
                    Back-End <br />
                    Front-End <br />
                    Front-End
                </p>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
    <script src="@popperUrl" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
